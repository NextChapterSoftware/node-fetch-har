{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./",
    "module": "commonjs",
    "target": "ES2019",
    "lib": [
      "ES2020",
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": ["node_modules"]
}
