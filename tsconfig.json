{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./",
    "module": "ES2020",
    "target": "ES2020",
    "lib": [
      "ES2020",
    ],
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strict": true
    /* enable all strict type-checking options */,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": ["node_modules"]
}
